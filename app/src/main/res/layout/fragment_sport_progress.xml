<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_sport_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sport Progress"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph_sport_workouts"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/text_total_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Workouts: "
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_weekly_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workouts This Week: "
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_monthly_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workouts This Month: "
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_yearly_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workouts This Year: "
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>
