<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_sport_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sport_progress"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph_sport_workouts"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/text_total_sport_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_sport_workouts"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_weekly_sport_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weekly_sport_workouts"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_monthly_sport_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/monthly_sport_workouts"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_yearly_sport_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yearly_sport_workouts"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph_distance_reps"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/text_total_distance_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_distance_reps"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_weekly_distance_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weekly_distance_reps"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_monthly_distance_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/monthly_distance_reps"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_yearly_distance_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yearly_distance_reps"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>
